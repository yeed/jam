<!DOCTYPE html>
<html>
	<head>
	  <title>Jam Dance Daddy Move Momma</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>
	<body>

		<div id="fb-root"></div>
		<script>
		(function(d, s, id) {
		  var js, fjs = d.getElementsByTagName(s)[0];
		  if (d.getElementById(id)) return;
		  js = d.createElement(s); js.id = id;
		  js.src = "//connect.facebook.net/tr_TR/sdk.js#xfbml=1&appId=822495544429570&version=v2.0";
		  fjs.parentNode.insertBefore(js, fjs);
		}(document, 'script', 'facebook-jssdk'));
		</script>

		<div class="container">
			<div class="centerofpage" style="width:487px">
				<%= image_tag "logo.png" %>

				<canvas id="myCanvas" width="300" height="562" style="margin-left:204px;">Your browser does not support the HTML5 canvas tag.</canvas>
			</div>

			<%= yield %>

			<div class="content bgcolor<%= @leftsidebgcolor %> fltleft">
				<%= yield :left_side %>
			</div>

			<div class="content bgcolor<%= @rightsidebgcolor %> fltright">
				<%= yield :right_side %>
			</div>
		</div>

		<div style="clear:both"></div>

		<div class="footer">
			<div class="footercontainer">
				<div class="shopbtn">
					<%= image_tag "shopproducts.png" %>
				</div>
				<div class="facebookbtn">
					<%= image_tag "facebookbtn.png" %>
				</div>
			</div>
		</div>

		<script>
			var colorOfrightside = "<%= @canvascolor %>"; 
			var c=document.getElementById("myCanvas");
			var ctx=c.getContext("2d");
			ctx.beginPath();
			ctx.moveTo(40,0);
			ctx.lineTo(0,590);
			ctx.lineTo(40,590);
			ctx.lineTo(40,0);
			ctx.strokeStyle = colorOfrightside;
			ctx.stroke();
			ctx.fillStyle= colorOfrightside;
			ctx.fill();
		</script>
	</body>
</html>
