<div class="centerofpage" style="width:200px;top:412px;">
	<%= image_tag "or.png" %>

	<%= @video %>

	<div id="fbpopup" style="display:none">
		<div id="data" style="width:568px;height:346px">

	  		<%= image_tag "popupframe.png", :style => "position:absolute" %>

	  		<%= link_to("/auth/facebook", :id => "sign_in") do %>
		  		<%= image_tag "fblike.png", :style => "margin-left: 188px;margin-top: 100px;position:absolute" %>
			<% end %>

			
			<p style="margin-left: 106px;margin-top: 203px;position: absolute;">Make your selection count by liking Jam Audio.</p>
		</div>
	</div>

	<script>
		

	</script>
</div>

<% content_for :left_side do %>
	
	<% if current_user %>
	<div class="sliderholder">
		<%= image_tag "slidepick.png", :id => "viewcontrol" %>
	</div>

	<% else %>
	<div style="margin-top: 167px;"></div>
	<% end %>
	<script type="text/javascript">
		$(function() {
		    $( "#viewcontrol" ).draggable(
		    	{ 
		    		axis: "x", 
		    		grid: [ 200, 0 ], 
		    		containment: "parent",
		    		stop: function() 
		    		{
		    			var position = $('#viewcontrol').css('left');
				        
				        if (position == "100px")
				        	location = "videos";
			      	}
		    	});
		});
		
		$('#viewcontrol').css('left', '-100px')
	</script>


	
	<div class="fltright">
		<p style="text-align:left;margin-top:82px;font-weight:bold">
			<%= @firstvideo.name %>
		</p>
		<div class="videoframe bgcolororange shadowblue" style="margin-right:150px;">
			<video width="267" onmouseover="UnMute(this)" onmouseout="Mute(this)" height="267" controls autoplay muted >
			  <source src="<%= @firstvideo.url %>" type="video/mp4">

			  Your browser does not support the video tag.
			</video>
		</div>
		<div class="youpassbtn" onclick="formSubmit('<%= @firstvideo.id %>')">
			<%= image_tag "youpass_btn.png" %>
		</div>
	</div>


	<a id="fbpopup_click" class="fancybox" href="#data" style="display:none">
		test
	</a>

<% end %>

<% content_for :right_side do %>

	<div class="fltleft">
		<p style="text-align:left;margin-top:250px;margin-left:150px;font-weight:bold">
			<%= @secondvideo.name %>
		</p>
		<div class="videoframe bgcolorgreen shadowpink" style="margin-left:150px;">
			<video width="267" onmouseover="UnMute(this)" onmouseout="Mute(this)" height="267" controls autoplay muted>
			  <source src="<%= @secondvideo.url %>" type="video/mp4">
			  Your browser does not support the video tag.
			</video>
		</div>
		<div class="youpassbtn" style="margin-left: 182px;" onclick="formSubmit(<%= @secondvideo.id %>)">
			<%= image_tag "youpass_btn.png" %>
		</div>
	</div>

<% end %>

<form id="whopass" accept-charset="UTF-8" action="/home/index" method="post" style="display:none">
	<input type="text" id="winner" name="winner" value="" />
</form>

<script>

$(".fancybox-skin").css('background-color', 'white');

var test = '<%= current_user %>';

function formSubmit(x)
{
	if (test)
	{
		$('#winner').val(x);
		document.getElementById("whopass").submit();
	}
	else
	{
		document.getElementById('fbpopup_click').click();
	}
}




function UnMute(x)
{
	x.muted = false;
}

function Mute(x)
{
	x.muted = true;
}

$(document).ready(function() {
  $("a.fancybox").fancybox();
});


$("#video").attr('muted', true);
</script>