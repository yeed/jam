<div class="centerofpage" style="width:200px;top:412px;">

	<%= image_tag "or.png" %>
	<%= @video %>

	<a href="#data" class="fancybox" id="jasonlink" style="display:none"></a>

	<div id="jasonpopup" style="display:none">
		<div id="data" style="width:596px;height:406px;text-align:center">
			<video style="border:solid 8px #12ceda" src="http://scontent-a.cdninstagram.com/hphotos-xaf1/t50.2886-16/10476864_685658741471616_1381574742_n.mp4" class="video" id="jasonvideo" width="568" height="320" controls>
			</video>
			<br/>
			<%= link_to("/auth/facebook", :id => "sign_in") do %>
		  		<%= image_tag "fblike.png", :style => "margin-left: -88px;;position:absolute" %>
			<% end %>
		</div>
		
	</div>

	<a href="#data2" id="fbpopup_click" class="fancybox2" style="display:none"></a>

	<div id="fbpopup" style="display:none">
		<div id="data2" style="width:568px;height:346px">

	  		<%= image_tag "popupframe.png", :style => "position:absolute" %>

	  		<%= link_to("/auth/facebook", :id => "sign_in") do %>
		  		<%= image_tag "fblike.png", :style => "margin-left: 188px;margin-top: 100px;position:absolute" %>
			<% end %>

			
			<p style="margin-left: 106px;margin-top: 203px;position: absolute;">Make your selection count by liking Jam Audio.</p>
		</div>
	</div>

	
</div>

<% content_for :left_side do %>
	
	<div class="socialmedia">
		
		<a href="http://www.facebook.com/jamspeaker"><%= image_tag "transparent.gif", :class => "facebook" %></a>
		<a href="http://www.twitter.com/jamspeaker"><%= image_tag "transparent.gif", :class => "twitter" %></a>
		<a href="http://instagram.com/JamAudio"><%= image_tag "transparent.gif", :class => "instagram" %></a>
	</div>

	<% if current_user %>
	<div class="sliderholder">
		<%= image_tag "slidepick.png", :id => "viewcontrol" %>
	</div>

	<% else %>
		<div style="margin-top: 167px;"></div>
	<% end %>

	<script type="text/javascript">
		$(function() {
		    $( "#viewcontrol" ).draggable(
		    	{ 
		    		axis: "x", 
		    		grid: [ 200, 0 ], 
		    		containment: "parent",
		    		stop: function() 
		    		{
		    			var position = $('#viewcontrol').css('left');
				        
				        if (position == "100px")
				        	location = "videos";
			      	}
		    	});
		});
		
		$('#viewcontrol').css('left', '-100px')
	</script>


	
	<div class="fltright">
		<p style="text-align:left;margin-top:82px;font-weight:bold">
			<%= @firstvideo.name %>
		</p>
		<div class="videoframe bgcolororange shadowblue" style="margin-right:150px;">
			<video id="video_left" width="267" onmouseover="UnMute(this)" onmouseout="Mute(this)" height="267" controls muted>
			  <source src="<%= @firstvideo.url %>" type="video/mp4">

			  Your browser does not support the video tag.
			</video>
		</div>
		
		<div class="youpassbtn" onclick="formSubmit(<%= @firstvideo.id %>)"></div>	
	</div>


	

<% end %>

<% content_for :right_side do %>

	<div class="fltleft">
		<p style="text-align:left;margin-top:250px;margin-left:150px;font-weight:bold">
			<%= @secondvideo.name %>
		</p>
		<div class="videoframe bgcolorgreen shadowpink" style="margin-left:150px;">
			<video id="video_right" width="267" onmouseover="UnMute(this)" onmouseout="Mute(this)" height="267" controls muted>
			  <source src="<%= @secondvideo.url %>" type="video/mp4">
			  Your browser does not support the video tag.
			</video>
		</div>
		<div class="youpassbtn" style="margin-left: 182px;" onclick="formSubmit(<%= @firstvideo.id %>)"></div>	
	</div>

<% end %>

<form id="whopass" accept-charset="UTF-8" action="/home/index" method="post" style="display:none">
	<input type="text" id="winner" name="winner" value="" />
</form>

<script>

	var test = '<%= current_user %>';
	if (!test)
	{
		$(window).bind("load", function() {
			document.getElementById('jasonlink').click();
			document.getElementById('jasonvideo').play();
			document.getElementById('jasonvideo').onended = function(e) {
				$.fancybox.close();
				document.getElementById('video_left').play();
				document.getElementById('video_right').play();
			};

		});
	}
	else
	{
		$(window).bind("load", function() {
			document.getElementById('video_left').play();
			document.getElementById('video_right').play();
		});
	}

	$(".fancybox-skin").css('background-color', 'white');

	function formSubmit(x)
	{
		if (test)
		{
			$('#winner').val(x);
			document.getElementById("whopass").submit();
		}
		else
		{
			document.getElementById('fbpopup_click').click();
		}
	}

	function UnMute(x)
	{
		x.muted = false;
	}

	function Mute(x)
	{
		x.muted = true;
	}

	$(document).ready(function() {

	  $("a.fancybox").fancybox({ 
	  	closeBtn: false,
	  });

	  $("a.fancybox2").fancybox();

	});


	$("#video").attr('muted', true);

</script>